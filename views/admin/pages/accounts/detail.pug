extends ../../layouts/default.pug

block main 
  if(data.role) 
    h1(class="mb-4") role: #{data.role}

  if (data.fullName) 
    h2(class="mb-4") name: #{data.fullName}

  if (data.email) 
    h2(class="mb-4") email: #{data.email}
  
  if (data.phone) 
    h2(class="mb-4") phone: #{data.phone}

  if (data.avatar)
    div(class="mb-4")
      img(
        src=data.avatar
        style="width: 100px"
      )
  
  if (data.status)
    div(class="mb-4")
      span Trang thái: 
      if (data.status === "active")
        span(class="badge badge-success") Hoạt động
      else 
        span(class="badge badge-danger") Dừng hoạt động
  a(
    href=`/${prefixAdmin}/accounts/edit/${data.id}`
    class="btn btn-warning"
  ) chỉnh sửa
  
  script(src="/admin/js/data.js")