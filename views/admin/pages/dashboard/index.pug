extends ../../layouts/default.pug

block main 
  .row.mt-4
    .col-12
      .card.mb-4
        .card-header Thông tin tài khoản
        .card-body
          if (user.avatar)
            img(
              src=user.avatar
              style="height: 100px; margin-bottom: 15px;"
            )
          if (user.fullName)
            p Họ tên: <b>#{user.fullName}</b>
          if (user.email)
            p Email: <b>#{user.email}</b>
          if (user.phone)
            p Số điện thoại: <b>#{user.phone}</b>
          if (role.title)
            p Phân quyền: <b>#{role.title}</b>
    
    .col-6 
      .card.mb-4 
        .card-header Chủ đề
        .card-body 
          p Số lượng: <b>#{statistic.topic.total}</b>
          p Hoạt động: <b>#{statistic.topic.active}</b>
          p Dừng hoạt động: <b>#{statistic.topic.inactive}</b>
    
    .col-6 
      .card.mb-4 
        .card-header Bài hát
        .card-body 
          p So luong: <b>#{statistic.song.total}</b>
          p Hoat dong: <b>#{statistic.song.active}</b>
          p Dung hoat dong: <b>#{statistic.song.inactive}</b>
    
    .col-6 
      .card.mb-4 
        .card-header Ca sĩ
        .card-body 
          p So luong: <b>5</b>
          p Hoat dong: <b>3</b>
          p Dung hoat dong: <b>2</b>
    
    .col-6 
      .card.mb-4 
        .card-header Tài khoản admin
        .card-body 
          p So luong: <b>5</b>
          p Hoat dong: <b>3</b>
          p Dung hoat dong: <b>2</b>
    
    .col-6 
      .card.mb-4 
        .card-header Tài khoản client
        .card-body 
          p So luong: <b>5</b>
          p Hoat dong: <b>3</b>
          p Dung hoat dong: <b>2</b>