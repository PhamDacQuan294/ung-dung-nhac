extends ../../layouts/default.pug

block main 

  h1(class="mb-4") Chỉnh sửa chủ đề

  form(
    action=`/${prefixAdmin}/topics/edit/${topic.id}?_method=PATCH`
    id="form-edit-topic"
    method="POST"
    enctype="multipart/form-data"
  )
    div(class="form-group")
      lable(for="title") Tiêu đề
      input(
        type="text"
        class="form-control"
        id="title"
        name="title"
        value=topic.title
      )
    div(class="form-group")
      label(for="desc") Mô tả
      textarea(
        class="form-control textarea-mce"
        id="desc"
        name="description"
        rows="5"
        textarea-mce
      ) #{topic.description}

    div(
      class="form-group"
      upload-image
    )
      label(for="avatar") Ảnh
      input(
        type="file"
        class="form-control-file"
        id="avatar"
        name="avatar"
        accept="image/*"
        upload-image-input
      )
      img(
        src=topic.avatar
        class="image-preview"
        upload-image-preview
      )
    div(class="form-group")
      lable(for="position") vị trí
      input(
        type="number"
        class="form-control"
        id="position"
        name="position"
        placeholder="Tự động tăng"
        min="1"
        value=topic.position
      )
    div(class="form-group form-check form-check-inline")
      input(
        type="radio"
        class="form-check-input"
        id="statusActive"
        name="status"
        value="active"
        checked=(topic.status == "active" ? true : false)
      )
      label(for="statusActive" class="form-check-label") Hoạt động

    div(class="form-group form-check form-check-inline")
      input(
        type="radio"
        class="form-check-input"
        id="statusInactive"
        name="status"
        value="inactive"
        checked=(topic.status == "inactive" ? true : false)
      )
      label(for="statusInactive" class="form-check-label") Dừng hoạt động

    div(class="form-group")
      button(
        type="submit"
        class="btn btn-primary"
      ) Cập nhật